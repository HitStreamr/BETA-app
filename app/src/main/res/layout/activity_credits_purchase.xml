<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_outline_wht"
    android:outlineProvider="background"
    android:gravity="center"
    android:elevation="4dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="70dp"
            android:text="ADD CREDITS"
            android:textSize="20sp"
            android:textColor="@android:color/black" />

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/seekBar_credits"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            app:isb_seek_smoothly="true" />

        <TextView
            android:id="@+id/credits_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            android:text="Credits Amount" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="5dp"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/cancel_credits_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="60dp"
                android:text="Cancel"
                android:background="@drawable/button2"
                android:textColor="@color/colorPrimary"
                android:onClick="cancelPurchase"/>

            <Button
                android:id="@+id/confirm_credits_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Confirm"
                android:background="@drawable/button2"
                android:textColor="@color/colorPrimary"
                android:onClick="confirmPurchase"/>
        </LinearLayout>



    </LinearLayout>



